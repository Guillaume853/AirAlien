<div class="row">
  <div class="col-sm-3">
    <div class="center">
      <%= image_tag avatar_url(@user), class: "avatar-full" %>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading"> Verification </div>
      <div class="panel-body">
        Email
        <br>
        Phone Number : <%= @user.phone_number %>
      </div>
    </div>
  </div>
  <div class="col-sm-9">
    <div class="center">
      <h2><%= @user.fullname %></h2>
      <div class="description row-space-3">
        <%= @user.description %>
      </div>
    </div>
  </div>
</div>
